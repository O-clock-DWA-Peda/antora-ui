{{#if navigation.length}}
  <ul class="nav-list" {{#if ./content}}{{#if ./items.length}} id="nav-{{{./content}}}" {{/if}}{{/if}}>
  {{#each navigation}}
    <li class="nav-item{{#if (eq ./url @root.page.url)}} is-current-page{{/if}}" {{#if ./content}}{{#if ./items.length}}aria-expanded="false" aria-controls="nav-{{{./content}}}" {{/if}}{{/if}} data-depth="{{or ../level 0}}">
    {{#if ./content}}
      {{#if ./items.length}}
      <button class="nav-item-toggle"></button>
      {{/if}}
      {{#if ./url}}
      <a class="nav-link" href="
        {{~#if (eq ./urlType 'internal')}}{{{relativize ./url}}}
        {{~else}}{{{./url}}}{{~/if}}">{{{./content}}}</a>
      {{else}}
      <span class="nav-text">{{{./content}}}</span>
      {{/if}}
    {{/if}}
{{> nav-tree navigation=./items level=(increment ../level)}}
  </li>
  {{/each}}
</ul>
{{/if}}
